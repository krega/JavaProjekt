<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="User" table ="USER">
        <meta attribute="class-description">
            This class contains the User detail. 
        </meta>
        <id name="id" type="long" column="ID">
            <generator class="native"/>
        </id>
     <map name="mapaWynikowS" cascade="all">
            <key column="user_id"/>
            <index column="kategoria" type="string"/>
            <one-to-many class="Liczniki"/>
        </map>
      
        <component name="credentials" class="Credentials">
            <property name ="Login" column="LOGIN" type="string"/>
            <property name ="Haslo" column="HASLO" type="string"/>
        </component>     
    </class>
       
 <class name="Liczniki" table="LICZNIKI">
      <meta attribute="class-description">
         This class contains the liczniki records. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="Poprawne" column="POPRAWNE" type="string"/>
      <property name="Niepoprawne" column="NIEPOPRAWNE" type="string"/>
  
 </class>
   
  
</hibernate-mapping>
    